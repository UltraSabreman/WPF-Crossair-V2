<Window x:Class="WPF_Crosshair.MainWindow"
		xmlns:tb="http://www.hardcodet.net/taskbar" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Window.Resources>
		<ContextMenu x:Name="Test2" x:Key="MyContextMenu">
			<MenuItem Header="Send" />
		</ContextMenu>
	</Window.Resources>
	<Grid>
		<Image x:Name="Test" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517"/>
		<tb:TaskbarIcon Name="TrayIcon"
		  ToolTipText="Crosshair Loader V2">
			<tb:TaskbarIcon.ContextMenu>
				
				<ContextMenu>
					<MenuItem x:Name="EnabledContext" IsChecked="true" Header="Enabled" Click="EnabledContext_Click" />
					<MenuItem x:Name="OptionsContext" IsCheckable="False" Header="Options" Click="OptionsContext_Click" />
					<Separator />
					<MenuItem x:Name="ExitContext" IsCheckable="False" Header="Exit" Click="ExitContext_Click" />
				</ContextMenu>
			</tb:TaskbarIcon.ContextMenu>
		</tb:TaskbarIcon>
		

	</Grid>
</Window>
