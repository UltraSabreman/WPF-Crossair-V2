	<Grid Margin="0,0,2,0">
		<GroupBox Header="Key Binds" HorizontalAlignment="Left" VerticalAlignment="Top" Height="54" Width="328" Margin="10,10,0,0">
			<Grid>
				<Label Content="Toggle Crosshair:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.204,0"/>
				<WindowsFormsHost Margin="116,0,0,0" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="190">
					<local:bindButton x:Name="ToggleBind" />
					<!--<local:bindButton x:Name="ToggleBind" />-->
				</WindowsFormsHost>
			</Grid>
		</GroupBox>
		<CheckBox x:Name="ExitWith" Content="Exit With Program" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,125,0,0" Checked="ExitWith_Checked" Unchecked="ExitWith_Checked"/>
		<TextBox Tag="Set the target Window (you can use regex)."  x:Name="TargetWindow" HorizontalAlignment="Left" Height="23" Margin="10,69,0,0" TextWrapping="Wrap" 
				 Text="" VerticalAlignment="Top" Width="289" Style="{DynamicResource TextBoxStyle1}" TextChanged="TargetWindow_TextChanged" />
		<Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Width="75" Margin="260,0,0,10" Height="20" VerticalAlignment="Bottom" Click="CancelButton_Click"/>
		<Button x:Name="OkButton" Content="Ok" Margin="180,0,0,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="OkButton_Click"/>
		<Button x:Name="ReloadButton" Content="Reload Crosshair" Margin="10,0,0,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="97" Click="ReloadButton_Click"/>
		<TextBox Tag="Crosshair File Path"  x:Name="FilePath" HorizontalAlignment="Left" Height="23" Margin="10,97,0,0" TextWrapping="Wrap" 
			Text="" VerticalAlignment="Top" Width="289" Style="{DynamicResource TextBoxStyle1}" TextChanged="FilePath_TextChanged"/>
		<Button x:Name="BrowseButton" Content="..." Margin="304,97,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="34" Click="BrowseButton_Click"/>
		<Button x:Name="TestTarget"  Content="Test" HorizontalAlignment="Left" VerticalAlignment="Top" Width="34" Margin="304,69,0,0" Height="23" Click="TestTarget_Click"/>
	</Grid>
</Window>
